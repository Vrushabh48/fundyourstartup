generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  phone    String
  password String
  gender   String
  investor Investor?
}

model Investor {
  id          String @id @default(uuid())
  userId      String @unique
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  portfolio   String
  description String
  startups    Startup[]
}

model Startup {
  id             String  @id @default(uuid())
  startupname    String
  startupemail   String  @unique
  founder        String
  foundedin      String
  stage          String
  employees      String
  sector         String
  description    String
  revenuemodel   String
  profits        String
  previousfunds  String
  cashburnt      String
  fundamount     String
  valuation      String
  equityratio    String
  investorId     String?
  investor       Investor? @relation(fields: [investorId], references: [id], onDelete: SetNull)
  teamMembers    Team[]    
}

model Team {
  id         String   @id @default(uuid())
  name       String
  role       String
  startupId  String
  startup    Startup  @relation(fields: [startupId], references: [id], onDelete: Cascade)
}
